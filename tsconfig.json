{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src",                // ✅ Add this to pick up your `types/env.d.ts`
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "astro/client",
      "@cloudflare/workers-types"  // ✅ Add this for `KVNamespace` type
    ]
  }
}
